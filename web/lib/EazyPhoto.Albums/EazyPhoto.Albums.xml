<actions>
    <group name="albums">
        <action name="GetAlbumList">
            <path>albums/GetAlbumListAction</path>
        </action>
        <action name="SaveAlbum">
            <path>albums/SaveAlbumAction</path>
            <redirects>
                <redirect name="success" path="vt://albums/"></redirect>
            </redirects>
        </action>
        <action name="DeleteAlbum">
            <path>albums/SaveAlbumAction</path>
            <parameters>
                <request>
                    <param name="action">'delete'</param>
                </request>
            </parameters>
        </action>
    </group>
    <group name="photos">
        <action name="GetPhotoList">
            <path>photos/GetPhotoListAction</path>
        </action>
        <action name="SavePhoto">
            <path>photos/SavePhotoAction</path>
            <redirects>
                <redirect name="success" path="vt://photos/"></redirect>
            </redirects>
        </action>
        <action name="DeletePhoto">
            <path>photos/SavePhotoAction</path>
            <parameters>
                <request>
                    <param name="action">'delete'</param>
                </request>
            </parameters>
        </action>
    </group>
</actions>